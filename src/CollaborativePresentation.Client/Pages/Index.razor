@page "/"

<div class="container py-5">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h1 class="display-4">Collaborative Presentation Tool</h1>
            <p class="lead">Create, edit, and share your presentations with others in real-time!</p>

            <!-- Отображение никнейма -->
            @if (!string.IsNullOrEmpty(nickname))
            {
                <div class="alert alert-info">
                    <strong>Welcome, @nickname!</strong>
                </div>
            }
        </div>
    </div>

    <!-- Список презентаций -->
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3">
            <h4 class="mb-4">Available Presentations</h4>
            <div class="list-group">
                @foreach (var presentation in presentations)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@presentation.Name</span>
                        <button class="btn btn-primary btn-sm" @onclick="() => JoinPresentation(presentation.Id)">Join</button>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Кнопка создания новой презентации -->
    <div class="row mt-4">
        <div class="col-12 text-center">
            <button class="btn btn-success btn-lg" @onclick="OpenCreatePresentationModal">Create New Presentation</button>
        </div>
    </div>
</div>

<!-- Модальное окно для ввода никнейма -->
<div class="modal fade" id="nicknameModal" tabindex="-1" aria-labelledby="nicknameModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="nicknameModalLabel">Enter Your Nickname</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="text" class="form-control" @bind="nicknameInput" placeholder="Your Nickname" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" @onclick="SaveNickname">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно для создания новой презентации -->
<div class="modal fade" id="createPresentationModal" tabindex="-1" aria-labelledby="createPresentationModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createPresentationModalLabel">Create New Presentation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="text" class="form-control" @bind="newPresentationName" placeholder="Presentation Name" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" @onclick="SaveNewPresentation">Create</button>
            </div>
        </div>
    </div>
</div>
