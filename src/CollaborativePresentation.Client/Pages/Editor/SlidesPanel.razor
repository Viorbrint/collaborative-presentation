<h5>Slides</h5>
<div class="list-group mb-4">
    @foreach (var slide in slides)
    {
        <a href="javascript:void(0);" class="list-group-item list-group-item-action" @onclick="() => onSlideSelected.InvokeAsync(slide.Id)">
            <SlideThumbnail SlideId="@slide.Id" />
            <span class="ms-2">@slide.Name</span>
        </a>
    }
</div>
<button class="btn btn-outline-success btn-circle d-block mx-auto" @onclick="() => onSlideAdded.InvokeAsync()" title="Add Slide">
    <i class="bi bi-plus"></i>
</button>
